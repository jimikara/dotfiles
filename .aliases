# Easier navigation: .., ..., ~ and -
alias ..="cd .."
alias cd..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

alias mk="mkdir"
alias mkp="mkdir -p"

alias p="pwd"

# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

alias g="git"

# My popular directories

alias sites="cd/Documents/sites/"

# Seed specifc navigation shortcuts
alias lara="cd ~/Documents/sites/seed/Larahub"
